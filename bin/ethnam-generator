#!/usr/bin/env php
<?php
/**
 *  Ethnam Generator Command
 *
 */
use Ethnam\Generator\Command;

error_reporting(E_ALL);

$binDir = __DIR__; // 'ethnam-generator/bin' or 'vendor/bin'

if (basename(dirname($binDir)) === 'vendor') {
    $vendorDir = dirname($binDir);
} else if (basename($binDir . '/../vendor') === 'vendor') {
    $vendorDir = $binDir . '/../vendor';
} else {
    throw new \Exception('vendir dir not found');
}

// 'vendor/autoload.php';
require_once  $vendorDir . '/autoload.php';

$handle = new Command;
$statu = $handle->run();

exit($statu);
